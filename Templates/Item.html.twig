{% extends "Main.html.twig" %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href={{ CSS_ ~ 'Item.css' }}>
{% endblock %}

{% block main %}

<div id="main__template" class="h-100 w-100 d-flex justify-content-center align-items-center">

    <div id="main__template__form" class="h-50">
        <h2>Adicione um novo Tipo de Produto</h2>

        <form id="new__item">

        <div class="d-flex flex-column mt-2">
            <label for="title" class="fw-bold">Título:</label>
            <input type="text" id="title" class="border-0" name="title" required>
        </div>

        <div class="d-flex flex-column mt-2">
            <label for="price" class="fw-bold">Preço:</label>
            <input type="text" id="price" class="border-0" name="price" required pattern="[0-9]+([,.][0-9]{1,2})?">
        </div>

        <button type="submit" class="w-100 fw-bold border-0 mt-2">Cadastrar</button>

        </form>
    </div>

</div>

{% endblock %}
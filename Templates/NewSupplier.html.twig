{% extends "Main.html.twig" %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href={{ CSS_ ~ 'NewSupplier.css' }}>
{% endblock %}

{% set PROCESS_ = URL_ ~ 'supplier/process/add' %}

{% block main %}

    <div id="main__template" class="h-100 d-flex justify-content-center align-items-center">

        <div id="main__template__new" class="h-50 w-100">
            <form id="main__template__new__supplier" method="POST" action="{{ PROCESS_ }}">
                <div class="d-flex flex-column mt-2">
                    <label for="supplier__name" class="fw-bold">Nome:</label>
                    <input type="text" id="supplier__name" name="name" class="border-0" maxlength="32" placeholder="Empresa" required autofocus>
                </div>

                <div class="d-flex flex-column mt-2">
                    <label for="supplier__cnpj" class="fw-bold">CNPJ:</label>
                    <input type="text" id="supplier__cnpj" name="cnpj" class="border-0" placeholder="00.000.000/0000-00" maxlength="18" pattern="^\d{2}\.?\d{3}\.?\d{3}\/?\d{4}\-?\d{2}$" required>
                </div>

                <input type="submit" value="Adicionar" class="w-100 fw-bold mt-2 btn btn-outline-primary">
            </form>
        </div>

    </div>

{% endblock %}
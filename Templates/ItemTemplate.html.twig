{% extends "Main.html.twig" %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href={{ CSS_ ~ 'ItemTemplate.css' }}>
{% endblock %}

{% block main %}

<div id="main__template" class="h-100 w-100 d-flex justify-content-center align-items-center">

    <div id="main__template__form" class="h-50">
        <h2>{% block page_title PAGE_TITLE_ %}</h2>

        <form id="new__item" method="POST" action="{% block form_action PROCESS_ %}">

        <div class="d-flex flex-column mt-2">
            <label for="title" class="fw-bold">Título:</label>
            <input type="text" id="title" maxlength="32" value="{% block form_action_title FORM_TITLE_ %}" class="border-0" name="title" required autofocus>
        </div>

        <div class="d-flex flex-column mt-2">
            <label for="price" class="fw-bold">Preço:</label>
            <input type="text" id="price" value="{% block form_action_price FORM_PRICE_ %}" class="border-0" name="price" required pattern="^(0|[1-9]\d{0,2}(\.\d{3})*),\d{2}$">
        </div>

        <button type="submit" class="w-100 fw-bold border-0 mt-2">{% block form_btn FORM_BTN_NAME_|default('Cadastrar') %}</button>

        </form>
    </div>

</div>

{% endblock %}
{% extends "Main.html.twig" %}

{% set URL_ACTION_SEARCH_ = URL_ ~ 'show/items' %}
{% set URL_ACTION_EDIT_ = URL_ ~ 'item/edit?id=' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href={{ CSS_ ~ 'ShowItems.css' }}>
{% endblock %}

{% block main %}

<section id="header" class="d-flex justify-content-center align-items-center">

    <form id="header__form__search" class="h-50 d-flex" method="GET" action="{{ URL_ACTION_SEARCH_ }}">
        <input type="text" id="header__form__search__text" name="product" class="border-0" placeholder="Digite o nome do produto" required autofocus>
        <input type="submit" value="" id="header__form_search__submit" class="border-0">
    </form>

</section>

<section id="footer">

    {% for product in PRODUCT_LIST_ %}
        <div class="footer__item mt-4 rounded-2 d-flex justify-content-center align-items-center">
            <h2 class="fs-2 m-0"><span class="fw-bold">{{ product.type_of_product_id }}</span> - {{ product.title }}</h2>
            <a href="{{ URL_ACTION_EDIT_ ~ product.type_of_product_id }}" class="rounded-circle"></a>
        </div>
    {% endfor %}

    {% if PRODUCT_LIST_|length < 1 %}

        <div class="w-100 d-flex justify-content-center mt-2">
            <p id="footer__no__results" class="fs-1">Sem resultado</p>
        </div>

    {% elseif PRODUCT_LIST_|length > 9 %}

        <div class="w-100 d-flex justify-content-center">
            <a href="{{ URL_ACTION_SEARCH_ ~ '?product=' ~ PRODUCT_SEARCH_ ~ '&limit=' ~ PAGINATION_ }}" id="footer__next" class="fs-3 mt-3 w-25 btn btn-primary border-0">Next</a>
        </div>

    {% endif %}

</section>

{% endblock %}